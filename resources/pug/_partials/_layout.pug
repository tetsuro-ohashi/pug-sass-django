| {% load static %}
include _config
include _datas/_data
include _mixin
block vars
  - metas = {}
  - metas.title = '{% block title %}SampleProject{% endblock %}'
  - metas.url = siteurl
  - metas.image = '{% block image %}{% endblock %}'
  - metas.site_name = sitetitle
  - metas.description = '{% block description %}{% endblock %}'
  - metas.keyword = '{% block keyword %}{% endblock %}'
  - metas.pageClass = '{% block pageClass %}{% endblock %}'
doctype html
html(lang="ja")
  include _head
  body(class = metas.pageClass)
    block body
      .wrapper
        | {% include "includes/header.html" %}
        block contents
        | {% include "includes/footer.html" %}
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
    script(src="/assets/js/app.js")
    block end_of_body
